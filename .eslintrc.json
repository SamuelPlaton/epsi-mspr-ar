{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style": "off", // Allow Windows and Mac LineBreaks
        // note you must disable the base rule as it can report incorrect errors
        "no-use-before-define": "off",
        "@typescript-eslint/no-use-before-define": ["error"],
        "react/jsx-filename-extension": "off", // Allow JSX in ts files
        "react/function-component-definition": "off",
        "@typescript-eslint/no-use-before-define": "off", // allow us to define style under component
        "import/extensions": "off", // disable import extension
        "import/prefer-default-export": "off", // disable default import preference
        "import/no-unresolved": "off", // disable unresolved imports
        "global-require": "off", // disable global require
        "react/no-unescaped-entities": "off", // allow to use unescaped entites such as < ' >
        "no-unused-vars": "off" // allow unused vars
    }
}
